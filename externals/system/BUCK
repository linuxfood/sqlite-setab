# This config just specifies dependencies that we expect to be provided
# by the system directly, usually as a result of having glibc, etc.

cxx_library(
    name = 'dl',
    #header_only = True,
    exported_platform_linker_flags = [
        ('', ['-ldl']),
    ],
    visibility = [
        'PUBLIC',
    ],
)

cxx_library(
  name = 'pthread',
  #header_only = True,
  exported_platform_linker_flags = [
    ('', ['-pthread']),
  ],
  visibility = [
    'PUBLIC',
  ],
)

