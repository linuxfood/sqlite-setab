orig_cxx_library = cxx_library
orig_cxx_binary = cxx_binary
orig_cxx_test = cxx_test

def default_args(kwargs):
    kwargs['visibility'] = kwargs.get('visibility', ['PUBLIC'])
    kwargs['link_style'] = kwargs.get('link_style', 'shared')
    return kwargs

def cxx_library(**kwargs):
    return orig_cxx_library(**default_args(kwargs))

def cxx_binary(**kwargs):
    return orig_cxx_binary(**default_args(kwargs))

def cxx_test(**kwargs):
    return orig_cxx_test(**default_args(kwargs))
